<%- include('partials/header') %>

<h1 class="text-center mb-4">Welcome to your Dashboard <%= username %> </h1>

<h4 class="text-center mb-4">Here are your personal task statistics</h4>

<div class="row text-center mb-5">
  <div class="col-md-4">
    <div class="card bg-light shadow-sm">
      <div class="card-body">
        <h5>Total Tasks</h5>
        <h3><%= totalTasks %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card bg-success text-white shadow-sm">
      <div class="card-body">
        <h5>Completed</h5>
        <h3><%= completedTasks %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card bg-warning text-dark shadow-sm">
      <div class="card-body">
        <h5>Pending</h5>
        <h3><%= pendingTasks %></h3>
      </div>
    </div>
  </div>
</div>

<div class="text-center">
  <a href="/tasks/new" class="btn btn-primary btn-lg">Add New Task</a>
</div>

<%- include('partials/footer') %>
